{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "baseUrl": "src",
		"paths": {
      "@controllers": ["controllers"],
      "@controllers/*": ["controllers/*"],
      "@entities": ["entities"],
			"@entities/*": ["entities/*"],
